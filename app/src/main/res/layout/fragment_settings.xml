<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.fragments.SettingsFragment">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/id_set_iv_img"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_set_button_back_to_menu"
        android:layout_width="0dp"
        android:background="@drawable/ic_back"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>

    <TextView
        android:text="change the app wallpaper"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/id_set_tv_change_image_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/id_set_button_change_image_back"
        app:layout_constraintTop_toBottomOf="@id/id_set_button_back_to_menu"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="change"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/charm"
        android:background="@drawable/background_button_menu"
        android:layout_marginTop="20dp"
        android:id="@+id/id_set_button_change_image_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/id_set_tv_change_image_back"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/id_set_button_back_to_menu"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/id_set_tv_title_rules"
        android:layout_width="0dp"
        android:fontFamily="@font/charm"
        android:text="Rules of the Queen of spades game:"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/id_set_button_change_image_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95"/>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/id_set_tv_title_rules"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/id_set_tv_rules"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="30sp"
            android:layout_height="match_parent"/>

    </ScrollView>










</androidx.constraintlayout.widget.ConstraintLayout>