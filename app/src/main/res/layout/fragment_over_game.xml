<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#686868"
    tools:context=".view.fragments.OverGameFragment">

    <ImageView
        android:layout_width="0dp"
        android:id="@+id/id_overgame_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_gameover_tv_title_results"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="0dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/id_gameover_tv_title_results"
        app:layout_constraintTop_toTopOf="@id/id_gameover_tv_title_results"
        app:layout_constraintBottom_toBottomOf="@id/id_gameover_tv_title_results"/>


    <TextView
        android:id="@+id/id_gameover_tv_title_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Results"
        android:fontFamily="@font/charm"
        android:textColor="@color/black"
        android:textSize="80sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintWidth_percent="0.9"/>


    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@id/id_gameover_tv_title_results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/id_gameover_tv_title_results"
        app:layout_constraintBottom_toBottomOf="@id/id_gameover_tv_title_results"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:id="@+id/id_gameover_button_menu"
        android:text="MENU"
        android:textColor="@color/white"
        android:fontFamily="@font/charm"
        android:textSize="33sp"
        android:background="@drawable/background_button_menu"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/id_gameover_tv_win_or_loss"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="18sp"
        android:text="20sp"
        app:layout_constraintBottom_toTopOf="@id/id_gameover_tv_cash"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintEnd_toStartOf="@id/id_gameover_iv_img_win_or_less"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_overgame_img"/>

    <ImageView
        android:id="@+id/id_gameover_iv_img_win_or_less"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/id_gameover_tv_win_or_loss"
        app:layout_constraintTop_toTopOf="@id/id_gameover_tv_win_or_loss"
        app:layout_constraintStart_toEndOf="@id/id_gameover_tv_win_or_loss"/>





    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/id_gameover_tv_cash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="18sp"
        android:text="20sp"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toTopOf="@id/id_gameover_button_again"
        app:layout_constraintEnd_toStartOf="@id/id_gameover_iv_img_cash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_gameover_tv_win_or_loss"/>

    <ImageView
        android:id="@+id/id_gameover_iv_img_cash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/id_gameover_tv_cash"
        app:layout_constraintTop_toTopOf="@id/id_gameover_tv_cash"
        app:layout_constraintStart_toEndOf="@id/id_gameover_tv_cash"/>




    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:background="@drawable/background_button_menu"
        android:id="@+id/id_gameover_button_again"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/charm"
        android:textSize="33sp"
        android:text="AGAIN"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/id_gameover_button_menu"
        app:layout_constraintTop_toBottomOf="@id/id_gameover_tv_cash"/>




</androidx.constraintlayout.widget.ConstraintLayout>